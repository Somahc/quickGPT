{
    "name": "Quick GPT",
    "description": "chrome拡張機能の基礎",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "images/message.png"
    }
}